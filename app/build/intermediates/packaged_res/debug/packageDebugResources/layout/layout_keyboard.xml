<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/keyboard_background">

    <!-- Top Area (Logs, Suggestions, Clipboard Actions) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/suggestion_bg">

        <!-- Gemini Logs Area -->
        <ScrollView
            android:id="@+id/svGeminiLogs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#222222"
            android:visibility="gone">
            
            <TextView
                android:id="@+id/tvGeminiLogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="> Gemini Logs initialized..."
                android:textColor="#00FF00"
                android:textSize="10sp"
                android:padding="4dp" />
        </ScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSuggestions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingVertical="4dp"
            android:visibility="gone" />

        <!-- Clipboard / Smart Reply Action View -->
        <LinearLayout
            android:id="@+id/layoutClipboardActions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            android:visibility="gone">
            
            <TextView
                android:id="@+id/tvClipboardPreview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Copied: ..."
                android:textColor="#FF444444"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnTranslate"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Translate"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/accent_blue"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSmartReply"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Reply"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/accent_blue"
                android:insetTop="0dp"
                android:insetBottom="0dp" />
                
             <ImageButton
                android:id="@+id/btnCloseClipboard"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="@null" 
                android:contentDescription="Close" 
                android:tint="#757575"/>
        </LinearLayout>
    </FrameLayout>

    <!-- Toolbar (Mic, Settings) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:background="@color/suggestion_bg">

        <ImageButton
            android:id="@+id/btnMic"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_btn_speak_now"
            android:background="@null" 
            android:contentDescription="Voice Input" />
            
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="8dp">

            <TextView
                android:id="@+id/tvToolbarTranslation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FF444444"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="" />

            <Button
                android:id="@+id/btnToolbarReply"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Reply"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/accent_blue"
                android:padding="0dp"
                android:layout_marginStart="8dp"
                android:visibility="gone" />
        </LinearLayout>
            
        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_menu_preferences"
            android:background="@null"
            android:contentDescription="Settings" />

    </LinearLayout>

    <!-- Keys Container (Placeholder for rows) -->
    <LinearLayout
        android:id="@+id/keyboardRows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="6dp"
        android:background="@color/keyboard_background">
        
        <!-- We will inflate rows programmatically or include them here later for specific QWERTY layout -->
        
    </LinearLayout>

</LinearLayout>
